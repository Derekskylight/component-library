{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types",
      "/src/components/react-app-env.d.ts"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "**/*.d.ts"
  ]
}
